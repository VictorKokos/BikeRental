<UserControl x:Class="BikeRental.View.ReviewItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BikeRental.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="2">
        <StackPanel Margin="5">
            <TextBlock FontSize="18" FontWeight="Bold" Text="{Binding Path=ReviewHeader}" />
            <TextBlock Text="{Binding Path=ClientId}" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding Path=ReviewText}" TextWrapping="Wrap" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding Path=Score}" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding Path=AnswerText}" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
