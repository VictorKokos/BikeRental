<!-- NewBikeView.xaml -->
<Window x:Class="BikeRental.NewBikeView"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Width="400">

    <Grid>
        <StackPanel>
            <Label>Model:</Label>
            <TextBox Text="{Binding NewBike.Model, UpdateSourceTrigger=PropertyChanged}" />
            <Label>Price per day:</Label>
            <TextBox Text="{Binding NewBike.PricePerDay, UpdateSourceTrigger=PropertyChanged}" />
            <Label>Description:</Label>
            <TextBox Text="{Binding NewBike.Description, UpdateSourceTrigger=PropertyChanged}" />
            <Button Command="{Binding SaveCommand}">Save</Button>
        </StackPanel>
    </Grid>
</Window>
