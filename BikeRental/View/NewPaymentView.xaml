<Window x:Class="BikeRental.NewPaymentView"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Width="400">

    <Grid>
        <StackPanel>
            <Label>Amount:</Label>
            <TextBox Text="{Binding NewItem.Amount, UpdateSourceTrigger=PropertyChanged}" />
            <Label>Payment Date:</Label>
            <DatePicker SelectedDate="{Binding NewItem.PaymentDate, UpdateSourceTrigger=PropertyChanged}" />

            <Button Command="{Binding SaveCommand}">Save</Button>
        </StackPanel>
    </Grid>
</Window>
