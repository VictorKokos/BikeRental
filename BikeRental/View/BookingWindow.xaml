<Window x:Class="BikeRental.BookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking Window" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Selected Bike:" Margin="10"/>
        <Label Content="{Binding SelectedBike.Model}" Grid.Column="1" Margin="10"/>

        <Label Content="Rental Start Date:" Grid.Row="1" Margin="10"/>
        <DatePicker SelectedDate="{Binding RentalStartDate}" Grid.Column="1" Grid.Row="1" Margin="10"/>

        <Label Content="Rental End Date:" Grid.Row="2" Margin="10"/>
        <DatePicker SelectedDate="{Binding RentalEndDate}" Grid.Column="1" Grid.Row="2" Margin="10"/>

        <Button Content="Book" Command="{Binding BookCommand}" Grid.Row="3" Grid.ColumnSpan="2" Margin="10"/>
    </Grid>
</Window>
