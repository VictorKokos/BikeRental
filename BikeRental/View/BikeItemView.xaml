<UserControl x:Class="BikeRental.View.BikeItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BikeRental.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="2">
        <StackPanel Margin="5" Width="400" Height="350">
            <TextBlock FontSize="18" Text="{Binding Path=Model}" />
            <TextBlock Text="{Binding Path=PricePerDay}" />
            <Image MaxHeight="250" Source="{Binding Image}" />
            <TextBlock Text="{Binding Path=Description}" />
           
        </StackPanel>
    </Border>
</UserControl>
