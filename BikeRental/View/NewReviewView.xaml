<Window x:Class="BikeRental.NewReviewView"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Width="400">

    <Grid>
        <StackPanel>
            <Label>Review Header:</Label>
            <TextBox Text="{Binding NewItem.ReviewHeader, UpdateSourceTrigger=PropertyChanged}" />
            <Label>Review Text:</Label>
            <TextBox Text="{Binding NewItem.ReviewText, UpdateSourceTrigger=PropertyChanged}" />
            <Label>Score:</Label>
            <TextBox Text="{Binding NewItem.Score, UpdateSourceTrigger=PropertyChanged}" />
            <Label>Answer Text:</Label>
            <TextBox Text="{Binding NewItem.AnswerText, UpdateSourceTrigger=PropertyChanged}" />

            <Button Command="{Binding SaveCommand}">Save</Button>
        </StackPanel>
    </Grid>
</Window>
